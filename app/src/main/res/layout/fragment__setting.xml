<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_Setting">

    <RelativeLayout
        android:id="@+id/rlt_toolbar_profile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:elevation="4dp">

            <include layout="@layout/toolbar_setting" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/rlt_toolbar_profile1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="20dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_user_black1"
                            android:layout_marginRight="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/a"
                            android:textStyle="bold"
                            android:text="Account"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="14dp">

                            <RelativeLayout
                                android:id="@+id/btn_editProfile"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_edit_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arialbd"
                                    android:text="Edit profile"
                                    android:layout_gravity="center_vertical|start|left"
                                    android:textSize="16sp"
                                    android:textColor="@color/gray" />

                                <ImageView
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_back_right"
                                    app:tint="@color/gray"/>

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp">

                            <RelativeLayout
                                android:id="@+id/rlt_changePassword"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_change_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arialbd"
                                    android:text="Change password"
                                    android:layout_gravity="center_vertical|start|left"
                                    android:textSize="16sp"
                                    android:textColor="@color/gray" />

                                <ImageView
                                    android:layout_marginBottom="6dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_back_right"
                                    app:tint="@color/gray"/>

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_bell_black"
                            android:layout_marginRight="16dp"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/a"
                            android:textStyle="bold"
                            android:text="Notifications"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="8dp">

                        <RelativeLayout
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_notifications"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/arialbd"
                                android:text="Notifications"
                                android:layout_gravity="center_vertical|start|left"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <Switch
                                android:buttonTint="@color/colorPrimary"
                                android:checked="true"
                                android:theme="@style/ToggleSwitchTheme"
                                android:id="@+id/switch_notification"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="6dp"
                                app:tint="#000"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:elevation="6dp">
                <LinearLayout
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_menu_24px"
                            android:layout_marginRight="16dp"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/a"
                            android:textStyle="bold"
                            android:text="More setting"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/gray"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <RelativeLayout
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_dark_more"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/arialbd"
                                android:text="Dark mode"
                                android:layout_gravity="center_vertical|start|left"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <Switch
                                android:buttonTint="@color/colorPrimary"
                                android:checked="false"
                                android:theme="@style/ToggleSwitchTheme"
                                android:id="@+id/switch_darkmode"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="6dp"
                                app:tint="#000"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp">

                        <RelativeLayout
                            android:id="@+id/rlt_logout"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arialbd"
                                android:text="Logout"
                                android:layout_gravity="center_vertical|start|left"
                                android:textSize="16sp"
                                android:textColor="@color/gray" />

                            <ImageView
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end|center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_back_right"
                                app:tint="@color/gray"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>