<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/lrt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar_profile" />

    </RelativeLayout>

    <RelativeLayout
        android:translationZ="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <ImageView
            android:id="@+id/img_cover_pf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/binz1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

    <ScrollView
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_marginTop="240dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgbg"
                        android:layout_width="match_parent"
                        android:paddingTop="80dp"
                        android:layout_height="250dp"
                        android:layout_gravity="bottom"
                        android:scaleType="fitXY"
                        android:src="@drawable/bgshape" />

                    <LinearLayout
                        android:layout_marginTop="160dp"
                        android:id="@+id/layfor"
                        android:translationZ="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:gravity="center"
                            android:lineSpacingExtra="5sp"
                            android:text="Jaxon Clarke"
                            android:textColor="#131314"
                            android:textSize="23sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_location_on_black_24dp"
                                app:tint="#88888f" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7dp"
                                android:lineSpacingExtra="2.6sp"
                                android:text="Location"
                                android:textColor="#88888f"
                                android:textSize="13.4sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView

                        android:translationZ="10dp"
                        android:layout_below="@id/imgbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/laytwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_margin="20dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:id="@+id/lnl_history_pf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_history"
                                        app:tint="@color/colorPrimary" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="1.5sp"
                                        android:text="History"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="11.5sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnl_image_pf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_insert_photo_24px"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="1.5sp"
                                        android:text="image"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="11.5sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnl_friends_pf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_users_black"
                                        app:tint="@color/colorPrimary" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_horizontal"
                                        android:lineSpacingExtra="1.5sp"
                                        android:text="Friends"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="11.5sp" />

                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="top"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:layout_gravity="bottom"
                                android:translationZ="1dp"
                                app:cardCornerRadius="100dp">

                                <ImageView
                                    android:translationZ="8dp"
                                    android:id="@+id/img_avatar_pf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/hn" />
                            </androidx.cardview.widget.CardView>


                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="bottom|end"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/ic_camera_alt_24px"
                                android:gravity="center"
                                android:translationZ="3dp">

                            </LinearLayout>


                        </FrameLayout>

                    </LinearLayout>


                </RelativeLayout>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_profile"
                android:layout_below="@+id/frame1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>